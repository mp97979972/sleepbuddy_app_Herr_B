<resources  xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme.MyDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/teal_200</item>-->
        <item name="colorPrimary">#00BCD4</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
        <item name="colorSecondary">#00BCD4</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- next 3 lines are colors for preferences -->
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textColorPrimary">@color/grey</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <!-- Customize your theme here. -->
        <!-- Customized Colors for Dark Mode: -->
        <item name="primaryColor">#00BCD4</item>
        <item name="primaryTextColor">@color/light_grey</item>
        <item name="secondaryTextColor">@color/grey</item>
        <item name="tertiaryTextColor">@color/black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="infoBoxBackgroundColor">@color/dark_grey</item>
        <item name="overviewStartGradientColor">@color/bpmHrvBottomDarkMode</item>
        <item name="overviewEndGradientColor">@color/bpmHrvTopDarkMode</item>
    </style>

    <style name="AppTheme.MyLight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3F51B5</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- next 3 lines are colors for preferences -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/dark_grey</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <!-- Color for inactive switch: -->
        <item name="android:colorForeground">@color/grey</item>
        <!-- Customize your theme here. -->
        <!-- Customized Colors for Light Mode: -->
        <item name="primaryColor">#3F51B5</item>
        <item name="primaryTextColor">@color/black</item>
        <item name="secondaryTextColor">@color/dark_grey</item>
        <item name="tertiaryTextColor">@color/grey</item>
        <item name="backgroundColor">@color/white</item>
        <item name="buttonTextColor">@color/black</item>
        <item name="infoBoxBackgroundColor">@color/light_grey</item>
        <item name="overviewStartGradientColor">@color/bpmHrvBottomLightMode</item>
        <item name="overviewEndGradientColor">@color/bpmHrvTopLightMode</item>
    </style>



    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@null</item>
    </style>

</resources>
